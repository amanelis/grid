.activity_item
  .title
    =activity.contact_form.campaign.name
  .icon
    =image_tag("mail.png", :height => "48", :width => "48")
    .time
      =time_ago_in_words(activity.time_of_submission)+ " ago"
  .info
    %ul
      %li
        Name:
        =mail_to("#{activity.from_email}", "#{activity.name || activity.from_email}")
      %li
        Phone:
        =activity.phone_number
      %li
        Address:
        =activity.home_address
      %li
        Submitted at:
        =activity.time_of_submission.to_s(:rfc822)
      %li
        Work Category:
        =activity.work_category
      %li
        Description:
        =activity.work_description
  .review
    - semantic_form_for activity, :url => admin_activity_path(activity) do |f| 
      = f.semantic_errors :state
      - f.inputs do
        %br
        = f.input :review_status, :label => 'Review', :as => :select, :collection => Submission::REVIEW_STATUS_OPTIONS, :include_blank => false
      - f.buttons do
        = f.commit_button :update, :button_html => { :class => "sexybutton sexysimple sexygreen" }
  .bottom_title
    .ip
      =activity.ip_address
    .user_agent
      =activity.user_agent