%header
  %h1
    New Contact Form
    %span= @channel.name
  %h2.quiet= @account.name
%article
  - form_tag(channel_campaign_contact_forms_path(@account, @channel, @campaign), :method => :post) do
    %label Form forwarding email
    %br
    %label.small.quiet Where you want your form submitted to
    %br
    %input{:id => "contact_form_forwarding_email", :name => "contact_form[forwarding_email]", :type => "text", :placeholder => "me@cityvoice.com", :class => "title required"}
    %br
    %button{:id => 'create', :class => "button"} Create Contact Form