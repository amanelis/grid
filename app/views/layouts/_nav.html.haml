%ul
  %li.strong= link_to "GRID", root_path
  - if @current_user
    - if @current_user.admin?
      %li= link_to "Dashboard", dashboard_url
      %li= link_to "Accounts", accounts_url
    - else
      %li= link_to "Dashboard", dashboard_url
      - if can? :read, Account
        %li= link_to "Accounts", accounts_url
      - if can? :read, Activity
        %li= link_to "Activities", activities_url
  - else
    -#= link_to "Register", register_path
    = link_to "Login", login_path
- if @current_user
  %ul#account
    %li= link_to "My Info", edit_user_path(@current_user)
    %li= link_to 'Logout', user_session_path, :method => :delete, :id => "logout"