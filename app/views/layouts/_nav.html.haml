- if @current_user
  %aside.span-11
    - if @current_user.admin?
      = link_to "Dashboard", dashboard_url
      = link_to "Accounts", accounts_url
      = link_to "Activity", activities_url
      = link_to "Job Statuses", job_statuses_url
      = link_to "Users", users_url
    - else
      = link_to "Dashboard", dashboard_url
      - if can? :read, Account
        = link_to "Accounts", accounts_url
      - if can? :read, Activity
        = link_to "Activities", activities_url
  
  %aside#account.span-6
    = link_to @current_user.email, user_path(@current_user)
    = link_to 'Logout', user_session_path, :method => :delete, :id => "logout"
  %aside#search.span-3.last
    - form_tag searches_url, :method => :get, :id => 'search' do
      = text_field_tag 'search'
- else
  %aside.span-22.last
    %nav
      = link_to "Home", root_path
      = link_to "Register", new_person_path
      = link_to "Login", new_user_session_path