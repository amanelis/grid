- if @current_user
  %aside.span-15
    - if @current_user.admin?
      = link_to "Dashboard", dashboard_url
      = link_to "Accounts", accounts_url
    - else
      = link_to "Dashboard", dashboard_url
      - if can? :read, Account
        = link_to "Accounts", accounts_url
      - if can? :read, Activity
        = link_to "Activities", activities_url
  
  %aside.span-6.last
    %ul#account
      %li= link_to "My Info", edit_user_path(@current_user)
      %li= link_to 'Logout', user_session_path, :method => :delete, :id => "logout"
- else
  %aside.span-21.last
    %nav
      = link_to "Home", root_path
      -#= link_to "Register", register_path
      = link_to "Login", login_path