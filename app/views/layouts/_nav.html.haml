%nav
  %ul
    - if @current_user
      - if @current_user.admin?

        -# Welcome
        %li{:class => (request.url.include?("welcome")? 'active' : '')}
          %a.iconic.home
          = link_to "Welcome", welcome_url
        
        -# Dashboard  
        %li{:class => (request.url.include?("dashboard")? 'active' : '')}
          %a.iconic.dial
          = link_to "Dashboard", dashboard_url

        -# Accounts
        %li{:class => (request.url.include?("accounts")? 'active' : '')}
          %a.iconic.book-alt
          = link_to "Accounts", accounts_url

        -# Activities
        %li{:class => (request.url.include?("activities")? 'active' : '')}= link_to "<span class=\"iconic star\"></span>Leads", activities_url
        -#%li{:class => (request.url.include?("activities")? 'active' : '')}

        -# Searches
        %li{:class => (request.url.include?("searches")? 'active' : '')}
          %a.iconic.magnifying-glass
          = link_to "Search", searches_url

        -# Users
        %li{:class => (request.url.include?("users")? 'active' : '')}
          %a.iconic.user 
          = link_to "Users", users_url
        
        -# Jobs
        %li{:class => (request.url.include?("job_statuses")? 'active' : '')}
          %a.iconic.new-window
          = link_to "Jobs", job_statuses_url

      - else
        -# Dashboard
        %li{:class => (request.url.include?("dashboard")? 'active' : '')}
          %a.iconic.dial
          = link_to "Dashboard", dashboard_url

        - if can? :read, Account
          -# Accounts
          %li{:class => (request.url.include?("accounts")? 'active' : '')}
            %a.iconic.new-window
            = link_to "Accounts", accounts_url
            =# @current_user.count == 1 ? (link_to "Channels", accounts_url) : (link_to "Account", accounts_url)

        - if can? :read, Activity
          %li{:class => (request.url.include?("activities")? 'active' : '')}
            %a.iconic.star
            = link_to "Leads", activities_url
    - else
      -#= link_to "Register", register_path
      %li{:class => (request.url.include?("login")? 'active' : '')}
        %a.iconic.locked
        = link_to "Login", login_path
