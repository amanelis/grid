%nav
  %ul
    - if @current_user
      - if @current_user.admin?
        %li
          = image_tag("icons/dashboard.png")
          = link_to "Dashboard", dashboard_url
        %li
          = image_tag("icons/accounts.png")
          = link_to "Accounts", accounts_url
        %li.active
          = image_tag("icons/leads.png")
          = link_to "Leads", activities_url
        %li
          = image_tag("icons/jobs.png")
          = link_to "Jobs", job_statuses_url
        %li
          = image_tag("icons/users.png")
          = link_to "Users", users_url
        %li
          = image_tag("icons/search.png")
          = link_to "Search", searches_url
      - else
        %li= link_to "Dashboard", dashboard_url
        - if can? :read, Account
          %li= link_to "Accounts", accounts_url
        - if can? :read, Activity
          %li= link_to "Activities", activities_url
    - else
      -#= link_to "Register", register_path
      %li
        = image_tag("icons/dashboard.png")
        = link_to "Login", login_path