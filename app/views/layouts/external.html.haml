        #slideshow
          <iframe src="http://player.vimeo.com/video/21817065?title=0&amp;byline=0&amp;portrait=0" width="940" height="396" frameborder="0"></iframe>
  #content
    .container
      =render :partial => "layouts/flash", :locals => { :flash => flash }
      = yield
  =render :partial => "layouts/footer"