=render :partial => "layouts/header"
%body
  .container#wrapper
    %header.span-24#toolbar
      = link_to "CityVoice", root_path, :id => "logo"
      - if @current_user
        %li= link_to "My Info", edit_user_path(@current_user)
        %li= link_to 'Logout', logout_path, :method => :delete, :id => "logout"
      - else
        -#= link_to "Register", register_path
        -#%li= link_to "Login", login_path
    #navigation.span-4
      =render :partial => "layouts/nav"
    %section#content.span-20.last
      #yield
        =render :partial => "layouts/flash", :locals => { :flash => flash }
        = yield
    %footer.app=render :partial => "layouts/footer"