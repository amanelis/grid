%html{ :lang => "en"}
  %head
    %title= @browser_title || 'Powered by Grid'

    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %link{:rel => "shortcut icon", :href => "images/favicon.png" }
    %meta{:name => "description", :content => "The Grid helps you manage and measure your marketing campaigns - online or offline." }

    = stylesheet_link_tag 'ui-lightness/jquery-ui-1.8.5.custom', 'ui.daterangepicker', 'screen', 'facebox', 'application'
    = javascript_include_tag 'jquery-1.4.4.min', 'jquery-ui', 'daterangepicker.jQuery', 'modernizr', 'facebox', 'highcharts', 'application'
  
  %body.container
    %header#nav
      #logo
        =link_to image_tag("grid_logo.png"), root_url
      =render :partial => "layouts/nav"
    =render :partial => "layouts/flash", :locals => { :flash => flash }
    %section#content
      = yield
    %footer
      %small
        &copy; Copyright 2010
        =link_to "CityVoice", "http://www.cityvoice.com"
        .right
          =mail_to "alex.baldwin@cityvoice.com", "Feedback/Support", :subject => "Grid Feedback/Support"