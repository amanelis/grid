%p
  Job Name:
  %b
    = @job_status.name
%p
  Logged:
  =time_ago_in_words(@job_status.created_at) + " ago"
%p
  Duration:
  -if job.end_time
    = "#{(@job_status.end_time - @job_status.start_time).to_i} seconds"
  -else
    Running
%p
  Status:
  %b
    = @job_status.status
%p
  Errors:
  ~ text_area_tag("error_message", @job_status.error_message, :cols =>'120', :rows => '40')