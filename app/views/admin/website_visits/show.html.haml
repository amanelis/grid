%script
  $(function(){
  $('#daterangepicker').daterangepicker({arrows:false}); 
  });

  
%header
  
  %h1 Visitor: #{@website_visit.visitor_id} 
  %h2 Visitor Statistics
%article
  .right
    =link_to "See Global Visitor Stats", global_visitor_admin_website_visit_path(params[:id])
  -form_for(admin_website_visits_path, :html => {:method => "get", :onchange => "alert('hello')"}) do |f|
    = f.text_field :daterangepicker, :name => "daterangepicker", :id => "daterangepicker"
    = f.submit "Filter Dates"
  %h3 #{(@start_date).to_s(:long) + ' to ' + @end_date.to_s(:long)}
  

%article
  %table
    %thead
      %th Total Visits
      %th Location
      %th Total Actions
      %th Avg Actions/Visit
      %th Total Time Spent
      %th Avg Time Spent
      %th Bounce Rate
    %tbody
      %tr
        %td= @website_visit.website.visitor_visits_between(@website_visit.visitor_id, @start_date, @end_date).to_s
        %td= @website_visit.geolocation
        %td= @website_visit.website.visitor_actions_between(@website_visit.visitor_id, @start_date, @end_date)
        %td= '%.2f' % @website_visit.website.visitor_average_actions_between(@website_visit.visitor_id, @start_date, @end_date)
        %td
          - @total_time = @website_visit.website.visitor_total_time_spent_between(@website_visit.visitor_id, @start_date, @end_date).to_i
          = [(((@total_time/3600) != 0 ? (@total_time/3600).to_s + 'h' : nil)), (((@total_time/60 % 60) != 0 ? ((@total_time/60 % 60).to_s + 'm').rjust(2,'0') : nil)), (((@total_time % 60) != 0 ? ((@total_time % 60).to_s + 's').rjust(2,'0') : nil))].compact.join(':')
        %td
          - @avg_time = @website_visit.website.visitor_average_total_time_spent_between(@website_visit.visitor_id, @start_date, @end_date).to_i
          = [(((@avg_time/3600) != 0 ? (@avg_time/3600).to_s + 'h' : nil)), (((@avg_time/60 % 60) != 0 ? ((@avg_time/60 % 60).to_s + 'm').rjust(2,'0') : nil)), (((@avg_time % 60) != 0 ? ((@avg_time % 60).to_s + 's').rjust(2,'0') : nil))].compact.join(':')
        %td= '%.2f' %  @website_visit.website.visitor_bounce_rate_between(@website_visit.visitor_id, @start_date, @end_date)

%h3
  All Visits by this visitor
%article
  %table
    %thead
      %th Time Of Visit
      %th Actions
      %th Source
      %th Referrer
      %th Keyword
      %th Time Spent
    %tbody
      - (@website_visit.website.visits_by_visitor(@website_visit.visitor_id, @start_date, @end_date).sort { |a,b| b.time_of_visit <=> a.time_of_visit }).each do |website_visit|
        %tr
          %td=website_visit.time_of_visit.strftime("%m/%d/%y %I:%M %p")
          %td=website_visit.actions
          %td=website_visit.referrer_type
          %td=website_visit.referrer_domain
          %td=website_visit.referrer_search
          %td
            - @avg_time = website_visit.time_total.to_i
            = [(((@avg_time/3600) != 0 ? (@avg_time/3600).to_s + 'h' : nil)), (((@avg_time/60 % 60) != 0 ? ((@avg_time/60 % 60).to_s + 'm').rjust(2,'0') : nil)), (((@avg_time % 60) != 0 ? ((@avg_time % 60).to_s + 's').rjust(2,'0') : nil))].compact.join(':')
          