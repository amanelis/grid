/Begin of PPC Detailed Reports
-if @account.campaigns.sem.present?
  %table{:class => "pretty"}
    %thead
      %th
        Detailed PPC Reports
    %tbody
      -@account.campaigns.sem.each_index do |index|
        %tr
          %td
            %table{:class => "pretty"}
              %thead
                %th
                  = @account.campaigns.sem[index].name
              %tbody
                %tr
                  %td
                    /
                    /-if @sem_campaign_timelines[index].empty?
                    /  No Data
                    /-else
                    /  = render inline_annotated_timeline(@sem_campaign_timelines[index], 620, 280, 'div_id_to_create', {:zoomEndTime => @sem_campaign_timelines[index].keys.sort[-1], :zoomStartTime  => @sem_campaign_timelines[index].keys.sort[-30] })


/Begin of SEO Detailed Reports
-if @account.campaigns.seo.present?
  %table{:class => "pretty"}
    %thead
      %th
        Detailed SEO Reports
    %tbody
      -@account.campaigns.seo.each_index do |index|
        %tr
          %td
            %table{:class => "pretty"}
              %thead
                %th
                  = @account.campaigns.seo[index].name
              %tbody
                %tr
                  %td
                    /
                    /-if @seo_campaign_timelines[index].empty?
                    /  No Data
                    /-else
                    /  = render inline_annotated_timeline(@seo_campaign_timelines[index], 620, 280, 'div_id_to_create', {:zoomEndTime => @seo_campaign_timelines[index].keys.sort[-1], :zoomStartTime  => @seo_campaign_timelines[index].keys.sort[-30] })
                %tr
                  %td
                    %a{:hover => @account.campaigns.seo[index].campaign_style.website_traffic_sources_graph(300, 1000)}
                      = link_to image_tag(@account.campaigns.seo[index].campaign_style.website_traffic_sources_graph, :alt => 'Click to View'), @account.campaigns.seo[index].campaign_style.website_traffic_sources_graph(300, 1000)
                %tr
                  %td
                    %a{:hover => @account.campaigns.seo[index].campaign_style.seo_keyword_rankings_graph(300, 1000)}
                      = link_to image_tag(@account.campaigns.seo[index].campaign_style.seo_keyword_rankings_graph, :alt => 'Click to View'), @account.campaigns.seo[index].campaign_style.seo_keyword_rankings_graph(300, 1000)


/Begin of Map Detailed Reports
-if @account.campaigns.maps.present?
  %table{:class => "pretty"}
    %thead
      %th
        Detailed Map Reports
    %tbody
      -@account.campaigns.maps.each do |campaign|
        %tr
          %td
            %table{:class => "pretty"}
              %thead
                %th
                  = campaign.name
              %tbody
                %tr
                  %td
                    %a{:hover => campaign.campaign_style.google_keyword_rankings_graph(300, 1000)}
                      = link_to image_tag(campaign.campaign_style.google_keyword_rankings_graph, :alt => 'Click to View'), campaign.campaign_style.google_keyword_rankings_graph(300, 1000)
                %tr
                  %td
                    %a{:hover => campaign.campaign_style.google_map_data_counts_graph(300, 1000)}
                      = link_to image_tag(campaign.campaign_style.google_map_data_counts_graph, :alt => 'Click to View'), campaign.campaign_style.google_map_data_counts_graph(300, 1000)
                %tr
                  %td
                    %a{:hover => campaign.campaign_style.google_map_website_clicks_graph(300, 1000)}
                      = link_to image_tag(campaign.campaign_style.google_map_website_clicks_graph, :alt => 'Click to View'), campaign.campaign_style.google_map_website_clicks_graph(300, 1000)

/Begin of Calls Section
-@account.campaigns.each do |campaign|
  -if campaign.calls.find(:all, :conditions => ['call_start between ? AND ?', Date.today - 1.week, Date.today]).present?
    .center
      %h3
        = "Calls for" + campaign.name
      %table{:class => "pretty"}
        %thead
          %tr
            %th
              Caller
            %th
              Caller #
            %th
              Inbound #
            %th
              Time of Call
            %th
              Duration
            %th
              Result
            %th
              Disposition
            %th
              Rating
            %th
              Revenue
        %tbody
          -campaign.calls.find(:all, :conditions => ['call_start between ? AND ?', Date.today - 1.week, Date.today]).each do |call|
            %tr{ :class => cycle('odd', 'even')}
              %td
                = call.caller_name
              %td
                = call.caller_number
              %td
                = call.inboundno
              %td
                = call.call_start.to_s
              %td
                = call.duration
              %td
                = call.call_status
              %td
                = call.disposition
              %td
                = call.rating
              %td
                = call.revenue