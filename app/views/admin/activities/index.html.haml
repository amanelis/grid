%header
  .right
    = will_paginate(@activities)
  %h3 Activity
%article
  .activity
    -@activities.each do |activity|
      -if activity.is_call?
        = render :partial => "shared/activity_call", :locals => { :activity => activity.activity_type }
      -if activity.is_submission?
        = render :partial => "shared/activity_submission", :locals => { :activity => activity.activity_type }
    = will_paginate(@activities)