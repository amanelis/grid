%div{:id => "submissions"}
  %div{:style => "height: 500px; overflow: auto;"}
    %h2.subheader Submissions
    %table#activities.small
      %thead
        %tr
          %th Type
          %th From
          %th Time
      %tbody
        - for submission in @submissions
          %tr{:id => "submission_#{submission.id}", "data-time" => "#{submission.created_at.to_i}"}
            %td
              %a.iconic.article
            %td
              %strong= submission.contact_form.campaign.name
              %br
              = submission.contact_form.campaign.account.name
            %td
              %strong=submission.from_email
              %br
              =submission.name || submission.from_email
              %br
              =submission.phone_number
              %br
              =submission.home_address
            %td
              %br
              =time_ago_in_words(submission.time_of_submission) + " ago"
  %div{:id => 'submissions_paginate'}
    = will_paginate(@submissions)