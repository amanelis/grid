%h3 Create Form
-form_for (@form,  :url => new_campaign_contact_form_path) do |f|
  #create.span-16.append-1
    = f.text_field :campaign_id, :type => "hidden", :name => :campaign_id, :value => @campaign.id.to_s
    = f.label "Form Description:"
    = f.text_field :description, :placeholder => "Form for Campaign 1", :name => "description", :id => "description", :autocomplete => "off", :value => @date_range
    %br
    = f.label "Email To (Comma Separated):"
    = f.text_field :forwarding_email, :placeholder => "me@cityvoice.com, you@cityvoice.com", :name => "forwarding_email", :id => "forwarding_email", :autocomplete => "off", :value => @date_range
    %br
    = f.label "BCC Email To (Comma Separated):"
    = f.text_field :forwarding_bcc_email, :placeholder => "my_boss@cityvoice.com, your_boss@cityvoice.com", :name => "forwarding_bcc_email", :id => "forwarding_bcc_email", :autocomplete => "off", :value => @date_range
    %br
    = f.label "Link To Return To (www.cityvoice.com/thank-you):"
    = f.text_field :return_url, :placeholder => "www.cityvoice.com/thank_you", :name => "return_url", :id => "return_url", :autocomplete => "off", :value => @date_range
    %br
    = f.label "Custom Field 1:"
    = f.text_field :custom1_text, :name => "custom1_text", :id => "custom1_text", :autocomplete => "off", :value => @date_range 
    %br
    = f.label "Custom Field 2:"
    = f.text_field :custom2_text, :name => "custom2_text", :id => "custom2_text", :autocomplete => "off", :value => @date_range
    %br
    = f.label "Custom Field 3:"
    = f.text_field :custom3_text, :name => "custom3_text", :id => "custom3_text", :autocomplete => "off", :value => @date_range
    %br
    = f.label "Custom Field 4:"
    = f.text_field :custom4_text, :name => "custom4_text", :id => "custom4_text", :autocomplete => "off", :value => @date_range
    %br
    = f.label "Include Name?"
    = f.check_box :need_name, :placeholder => "true", :name => "need_name", :id => "need_name", :autocomplete => "off", :value => @date_range
    %br
    %br
    = f.label "Include Address?"
    = f.check_box :need_address, :placeholder => "true", :name => "need_address", :id => "need_address", :autocomplete => "off", :value => @date_range
    %br
    %br
    = f.label "Include Phone Number?"
    = f.check_box :need_phone, :placeholder => "true", :name => "need_phone", :id => "need_phone", :autocomplete => "off", :value => @date_range
    %br
    %br
    = f.label "Include Email?"
    = f.check_box :need_email, :placeholder => "true", :name => "need_email", :id => "need_email", :autocomplete => "off", :value => @date_range
    %br
    %br
    = f.label "Include Work Category?"
    = f.check_box :work_category, :placeholder => "true", :name => "work_category", :id => "work_category", :autocomplete => "off", :value => @date_range
    %br
    %br
    = f.label "Include Work Description?"
    = f.check_box :work_description, :placeholder => "true", :name => "work_description", :id => "work_description", :autocomplete => "off", :value => @date_range
    %br
    %br
    = f.label "Include Date Requested?"
    = f.check_box :date_requested, :placeholder => "true", :name => "date_requested", :id => "date_requested", :autocomplete => "off", :value => @date_range
    %br
    %br
    = f.label "Include Time Requested?"
    = f.check_box :time_requested, :placeholder => "true", :name => "time_requested", :id => "time_requested", :autocomplete => "off", :value => @date_range
    %br
    %br
    = f.label "Include Other Information?"
    = f.check_box :other_information, :placeholder => "true", :name => "other_information", :id => "other_information", :autocomplete => "off", :value => @date_range
    %br
    %br
    = f.submit "Create Contact Form"
    %br
    %br
  
  