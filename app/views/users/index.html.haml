%header
  .right= link_to "Create User", register_path, :rel => "facebox"
  %h1 Users
%article
  %table
    %thead
      %tr
        %th ID
        %th Email
        %th Created
        %th Last Request
        %th= @current_user.admin? ? "Action" : nil
    %tbody
      - @users.each do |user|
        %tr
          %td= user.id
          %td= link_to user.email, edit_user_path(user)
          %td= user.created_at.to_s(:long)
          %td= user.last_request_at.nil? ? "Has Not logged in" : time_ago_in_words(user.last_request_at)
          %td
            = link_to 'Edit', edit_user_path(user)
            = link_to 'Destroy', user, :confirm => "This will delete user: #{user.email}, are you sure?", :method => :delete unless user.id == @current_user.id
