%header
  %h3 Users
%article
  %table
    %thead
      %tr
        %th ID
        %th Email
        %th Created
        %th Last Request
        %th
    %tbody
      - if @current_user.admin?
        - @users.each do |user|
          %tr{ :class => cycle('odd', 'even')}
            %td= user.id
            %td= user.email
            %td= user.created_at.to_s(:long)
            %td= time_ago_in_words(user.last_request_at)
            %td= link_to 'Edit', user_path(user)
      - else
        %tr{ :class => cycle('odd', 'even')}
          %td= @current_user.id
          %td= @current_user.email
          %td= @current_user.created_at.to_s(:long)
          %td= time_ago_in_words(@current_user.last_request_at) 
          %td= link_to 'Edit', user_path(@current_user)