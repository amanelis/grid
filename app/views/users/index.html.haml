%header
  %h3 Users
%article
  %table
    %thead
      %tr
        %th ID
        %th Email
        %th Created
        %th Last Request
    %tbody
      - if @current_user.admin?
        - @users.each do |user|
          %tr
            %td= user.id
            %td= link_to user.email, user_path(user)
            %td= user.created_at.to_s(:long)
            %td= time_ago_in_words(user.last_request_at)
      - else
        %tr
          %td= @current_user.id
          %td= @current_user.email
          %td= @current_user.created_at.to_s(:long)
          %td= time_ago_in_words(@current_user.last_request_at) 
          %td= link_to 'Edit', user_path(@current_user)