%header
  %h1=@user.email
%article
  - form_for (@user) do |f|
    %h2 Login Information
    = f.label "Email"
    %br
    = f.text_field :email, :class => 'title'
    %br
    = f.label "Password"
    %br
    = f.password_field :password, :class => 'title'
    %br
    = f.label "Confirm Password"
    %br
    = f.password_field :password_confirmation, :class => 'title'
    = f.hidden_field :id, :value => @user.id
    %br
    
    - if @user.group_users.any?{|group_user| group_user.account_manager?}
      %br
      %h2 Account Manager Information
      %label Name  
      %br
      %input.title{:id => "manager_name", :name => "manager[name]", :type => "text"}
      %br
      %br
      %label Email  
      %br
      %input.title{:id => "manager_email", :name => "manager[email]", :type => "text"}
      %br
      %br
      %label Phone Number  
      %br
      %input.title{:id => "manager_phone", :name => "manager[phone]", :type => "text"}
      %br
      %br
    = f.submit "Save", :class => 'button'