-if @search_accounts.blank? || @search_campaigns.blank?
  %hs Search for Accounts or Campaigns
  = render :partial => 'shared/search'

%h3
  -unless @search_accounts.blank?
    %table{:class => "pretty"}
      %thead
        %tr
          %th Name (Click for Details)
          %th
            Calls
          %th
            Forms
          %th
            Total Leads
          %th
            Cost
          %th
            Spend(Marked Up)
          %th
            Cost Per Lead
      %tbody
        - @search_accounts.each do |account|
          %tr{:class => cycle('odd', 'even')}
            %td= link_to account.name, account_path(account)
            %td
              = account.number_of_lead_calls_between(Date.yesterday - 1.week, Date.yesterday).to_s
            %td
              = account.number_of_lead_submissions_between(Date.yesterday - 1.week, Date.yesterday).to_s
            %td
              = account.number_of_total_leads_between(Date.yesterday - 1.week, Date.yesterday).to_s
            %td
              = ActionController::Base.helpers.number_to_currency(account.cost_between(Date.yesterday - 1.week, Date.yesterday))
            %td
              = ActionController::Base.helpers.number_to_currency(account.spend_between(Date.yesterday - 1.week, Date.yesterday))
            %td
              = ActionController::Base.helpers.number_to_currency(account.cost_per_lead_between(Date.yesterday - 1.week, Date.yesterday))
