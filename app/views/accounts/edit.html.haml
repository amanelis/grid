- form_for @account, :url => account_path do |f|
  = f.label :name
  %br
  = f.text_field :name
  %br
  %br
  = f.label :main_contact
  %br
  = f.text_field :main_contact
  %br
  %br
  = f.label :industry
  %br
  = f.select :industry, Account.find(:all).collect(&:industry).uniq
  %br
  %br
  
  %label Account Manager
  = @account.account_manager.try(:name) || ""
  - if @account.account_manager.nil?
    - @data = ['- Select -', 0].to_s
  - else
    - @data = @account.account_manager.name
  
  %br
  =# select_tag 'account_manager', options_for_select(@account.group_account.potential_account_managers.collect {|x| [x.name, x.id]}.insert(0, '- Assign Account Manager -'), :selected => @account.account_manager.name)
  = select_tag('account_manager', options_for_select([['- Change Account Manager -', "0"]] + @account.group_account.potential_account_managers.collect {|x| [x.name, x.id]}, @account.account_manager {|x| [x.name, x.id]}))
  %br
  %br
  = f.submit "Update"
  
  