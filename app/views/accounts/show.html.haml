
%header
  %h1= @account.name
  %h2 Channels
%article
  %table.channels          
    - @seo_channels.each do |channel|
      %thead
        %tr
          %th=channel.name
          %th 5 leads
          %th.cpl $2.50 cost per lead
          %th= link_to 'Edit', edit_channel_path(@account, channel)
          %th= link_to 'X', channel_path(@account, channel), :confirm => "This will delete this channel, are you sure?", :method => :delete
      - channel.campaigns.each do |campaign|
        %tr
          %td= link_to campaign.name, channel_campaign_path(@account, channel, campaign, :daterange => params[:daterange])
          %td #Number of total leads
          %td #Cost per lead betwen
          %th= link_to 'Edit', edit_channel_campaign_path(@account, channel, campaign)
