%header
  %h1= @account.name
  %h2 Channels
%article
  %table.channels          
    - @seo_channels.each do |channel|
      %thead
        %tr
          %th= channel.name
          %th 5 leads
          %th.cpl $2.50 cost per lead
          %th
          %th= link_to 'X', channel_path(@account, channel), :confirm => "This will delete this channel, are you sure?", :method => :delete unless @account.channels.select(&:is_seo?).empty?
      - channel.campaigns.each do |campaign|
        = render :partial => 'accounts/channel_campaign', :locals => {:campaign => campaign, :channel => channel}

    - @sem_channels.each do |channel|
      %thead
        %tr
          %th= channel.name
          %th 5 leads
          %th.cpl $2.50 cost per lead
          %th
          %th= link_to 'X', channel_path(@account, channel), :confirm => "This will delete this channel, are you sure?", :method => :delete unless @account.channels.select(&:is_sem?).empty?
      - channel.campaigns.each do |campaign|
        = render :partial => 'accounts/channel_campaign', :locals => {:campaign => campaign, :channel => channel}

    - @basic_channels.each do |channel|
      %thead
        %tr
          %th= link_to channel.name, channel_path(@account, channel)
          %th 5 leads
          %th.cpl $2.50 cost per lead
          %th= link_to 'Edit', edit_channel_path(@account, channel)
          %th= link_to('X', channel_path(@account, channel), :confirm => "This will delete this channel, are you sure?", :method => :delete) unless @account.channels.select(&:is_basic?).empty?
      - channel.campaigns.each do |campaign|
        = render :partial => 'accounts/channel_campaign', :locals => {:campaign => campaign, :channel => channel}
      
  = link_to "Create Channel", new_channel_path(@account), :class => "button"
