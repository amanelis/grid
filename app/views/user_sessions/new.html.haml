- form_for @user_session, :url => user_session_path do |f|	
	%h3
		Log in
	%p
		= f.label :email
		%br
		= f.text_field :email, :class => 'title'
	%p
		= f.label :password
		%br
		= f.password_field :password, :class => 'title'
	%p
		= f.check_box :remember_me, :as => :boolean, :required => false
		Remember Me
	%p
		= f.submit "Login", :class => 'button'
		%br
		=link_to "Forgot your password?", new_password_reset_url