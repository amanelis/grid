= content_for :crumb do
  Log In

- form_for @user_session, :url => user_sessions_path do |f|	
  = f.label :email
  %br
  = f.text_field :email, :class => 'title'
  %br
  = f.label :password
  %br
  = f.password_field :password, :class => 'title'
  #input
    = f.check_box :remember_me, :as => :boolean
    Remember me on this computer
  %br
  -#%span.green-btn= f.submit "Log In"
  %button{:class => 'button', :id => 'login'} Login

  %small=link_to "Forgot your password?", new_password_reset_url