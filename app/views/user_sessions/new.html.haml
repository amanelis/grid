%h1 Login

- semantic_form_for @user_session, :url => user_session_path do |f|
  = f.semantic_errors :state
  - f.inputs do
    = f.input :email, :label => 'Your email'
    = f.input :password, :label => 'New password'
    = f.input :remember_me, :as => :boolean, :required => false
  - f.buttons do
    = f.commit_button "Login", :button_html => { :class => "sexybutton sexysimple sexygreen sexyxxl" }
    or
    =link_to "Forgot your password?", new_password_reset_url